generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  image         String?
  role          Role     @default(CUSTOMER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  accounts      Account[]
  sessions      Session[]
  favorites     Favorite[]
  purchases     Purchase[]
  socialAccounts SocialAccount[]
  chatThreads   ChatThread[]
}

enum Role {
  CUSTOMER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @map("refreshToken")
  access_token      String? @map("accessToken")
  expires_at        Int?    @map("expiresAt")
  token_type        String? @map("tokenType")
  scope             String?
  id_token          String? @map("idToken")
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Image {
  id           String   @id @default(cuid())
  title        String
  description  String
  tags         String   /// comma-separated for simplicity
  category     String
  priceCents   Int
  licenseTier  String
  previewUrl   String
  fullresUrl   String
  aiModel      String?
  aiSeed       String?
  generatedAt  DateTime @default(now())
  status       String   @default("active")
  analytics    ImageAnalytics[]
  favorites    Favorite[]
  purchases    Purchase[]
  socialPosts  SocialPost[]
}

model ImageAnalytics {
  id         String   @id @default(cuid())
  imageId    String
  views      Int      @default(0)
  favorites  Int      @default(0)
  downloads  Int      @default(0)
  socialShares Int    @default(0)
  period     String   /// day|week|month
  timestamp  DateTime @default(now())
  image      Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
}

model Purchase {
  id            String   @id @default(cuid())
  userId        String
  imageId       String
  licenseTier   String
  amountCents   Int
  currency      String   @default("USD")
  transactionId String?
  provider      String?
  createdAt     DateTime @default(now())
  licenseKey    String   @default(uuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  image         Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  imageId   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  image     Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
  @@unique([userId, imageId])
}

model Trend {
  id          String   @id @default(cuid())
  source      String   /// google_trends|twitter|tiktok|instagram|pinterest
  query       String
  score       Float
  region      String?
  capturedAt  DateTime @default(now())
  rawPayload  String   /// JSON as string for simplicity
}

model AIGenerationLog {
  id            String   @id @default(cuid())
  batchDate     DateTime
  countGenerated Int
  modelVersion  String?
  promptTemplate String?
  status        String   @default("success")
  notes         String?
}

model SocialAccount {
  id             String   @id @default(cuid())
  platform       String   /// instagram|facebook|tiktok|pinterest|twitter
  accountHandle  String
  connectedAt    DateTime @default(now())
  authState      String   @default("connected")
  settings       String?  /// JSON string
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SocialPost {
  id         String   @id @default(cuid())
  imageId    String
  platform   String
  caption    String
  hashtags   String   /// comma-separated
  scheduledFor DateTime?
  postedAt   DateTime?
  status     String   @default("scheduled")
  externalPostId String?
  image      Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
}

model ChatThread {
  id        String   @id @default(cuid())
  userId    String?
  status    String   @default("open") /// open|resolved|escalated
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  messages  ChatMessage[]
}

model ChatMessage {
  id         String   @id @default(cuid())
  threadId   String
  sender     String   /// user|ai|admin
  message    String
  attachments String? /// JSON string
  createdAt  DateTime @default(now())
  thread     ChatThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
}

model AISuggestion {
  id           String   @id @default(cuid())
  type         String   /// content|ux|pricing|ops
  proposal     String
  impactScore  Int      @default(0)
  status       String   @default("pending") /// pending|approved|rejected|implemented
  requestedAt  DateTime @default(now())
  approvedAt   DateTime?
  implementedAt DateTime?
}

model PaymentSettings {
  id                 String   @id @default(cuid())
  userId             String   /// admin owner
  paypalEmail        String?
  payoutCardLast4    String?
  payoutCardToken    String?  /// placeholder for processor token
  payoutPhone        String?  /// SMS notifications
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId])
}
